# git
#------------------------------------------------------------------------------
if type hub > /dev/null; then
  alias git=hub
fi
alias g='git'
alias rgit='/usr/local/bin/git'

# context from root of git directory
function groot() {
  local root
  root=$(rgit rev-parse --show-toplevel)
  if [[ $# == 0 ]]; then
    cd $root
  else
    (builtin cd $root && $*)
  fi
}
alias gr=groot

# thefuck
#------------------------------------------------------------------------------
if ! test thefuck > /dev/null; then
  eval "$(thefuck --alias)"
fi

# other
#------------------------------------------------------------------------------
# fall back to use built in cd
function cs() {
  builtin cd $*
}

# go to temp dir
alias temp="cs $HOME/temp"

